.inputMoudle{  /**输入框形状特征**/
  display: block;
  margin: 0 auto; 
  margin-top: 100rpx; 
  width: 600rpx;
  border:2rpx solid #aaaaaa;
  height: 500rpx;
  flex-direction: column;
  background: white;
} 
.word{       /**按钮文字说明的位置特性**/
position: absolute;
 left:50%;
 margin-left: -160px;
  top:580rpx; 
} 


.circle{                 /**圆形按钮的属性**/
   width: 140rpx;
    height: 140rpx;
    border: 0 solid #ffffff;
    border-radius: 100rpx;
    margin-top:150rpx; 
}
.add{                  /**圆形按钮中间的加号属性**/
  position: absolute;
  top: -90rpx;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  text-align: middle;
  font-size: 120rpx;
  font-weight: 800; 
  color: pink;
}
